<h1>Listing girls</h1>

<table>
  <tr>
    <th>Product name</th>
    <th>Cycle weight</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @girls.each do |girl| %>
  <tr>
    <td><%= girl.product_name %></td>
    <td><%= girl.cycle_weight %></td>
    <td><%= girl.description %></td>
    <td><%= girl.image_url %></td>
    <td><%= image_tag(girl.image_url, :width=>90, :height=>90) %></td>
    <td><%= girl.price %></td>
    <td><%= link_to 'Show', girl %></td>
    <td><%= link_to 'Edit', edit_girl_path(girl) %></td>
    <td><%= link_to 'Destroy', girl, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

